<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ForgotPasswordFragment">

    <TextView
        android:id="@+id/forgot_password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/noto_sans"
        android:text="Forgot Password"
        android:textColor="@color/text_color_black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forgot_password_fragment_text_body_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Input your registered email to reset your password and proceed to login"
        android:textColor="@color/text_color_black"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_textview"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_textview" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forgot_password_email_text_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_fragment_text_body_textview"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_fragment_text_body_textview"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_fragment_text_body_textview">

        <EditText
            android:id="@+id/forgot_password_email_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email" />


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/forgot_password_reset_password_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:padding="12dp"
        android:backgroundTint="@color/steel_blue"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_email_text_input_layout"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_email_text_input_layout"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_email_text_input_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>